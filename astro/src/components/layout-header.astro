---
import NavigationDesktop from './layout-nav-desktop.astro';
import ThemeToggle from './layout-theme-toggle.astro';

import { siteConfig } from '../../common/config';
import { cn } from '../../common/utils';
import { GitHubLogo } from '@astropub/icons';
import  { buttonVariants }  from './ts/buttonVariants';


---
<style>
  @import "@fortawesome/fontawesome-free/css/all.min.css";
</style>

<header class="supports-backdrop-blur:bg-background/60 sticky top-0 z-50 w-full border-b bg-background/95 backdrop-blur">
    <div class="container flex h-14 items-center">
      <NavigationDesktop />
      <!-- <NavigationMobile /> -->
      <div class="flex flex-1 items-center justify-end space-x-4">
        <nav class="flex items-center space-x-1">
          <a href={siteConfig.links.FAQ}>
            <div
              class={cn(
                buttonVariants({
                  variant: 'ghost',
                }),
                'w-9 px-0'
              )}
            >
              <span class="hover:text-foreground/80">FAQ</span>
            </div>
        </a>
          <a href={siteConfig.links.github}>
            <div
              class={cn(
                buttonVariants({
                  variant: 'ghost',
                }),
                'w-9 px-0'
              )}
            >
            <GitHubLogo />
              <span class="sr-only">GitHub</span>
            </div>
          </a>
          <ThemeToggle />
        </nav>
      </div>
    </div>
  </header>