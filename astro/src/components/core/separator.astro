---
import { cn } from '../../../common/utils';

const { orientation = 'horizontal', className, ...props} = Astro.props as { orientation: 'horizontal' | 'vertical', decorative: boolean, className: string };
---
<hr
  class={cn('shrink-0 bg-input', orientation === 'horizontal' ? 'h-[1px] w-full' : 'h-full w-[1px]', className)} {...props}
/>