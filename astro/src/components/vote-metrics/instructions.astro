---
import Card from "../card/card.astro";
import CardHeader from "../card/header.astro";
import CardTitle from "../card/title.astro";
import CardContent from "../card/content.astro";
import DialogButton from '../dialog/button.astro';
import { CardProps } from "../card/card.astro";
import { GetProposalResult } from '../../../common/store';

interface Props extends CardProps {
  memo: GetProposalResult['key'];
}

const { memo, className} = Astro.props as Props;
---
<Card className={className}>
    <CardHeader className="space-y-0 pb-1">
        <CardTitle className="text-sm font-normal">How do I cast my vote?</CardTitle>
        <p class="text-xs text-muted-foreground">I want to vote...</p>
      </CardHeader>
      <CardContent className="grid grid-cols-2 gap-4 mt-1">
        <DialogButton direction="For" memo={memo}/>
        <DialogButton direction="Against" memo={memo}/>
      </CardContent>
</Card>