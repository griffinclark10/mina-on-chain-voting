---
import {rows} from '../../../common/fakedata'
import TableHeader from './header.astro'
import Title from './proposal/title.astro';
import Key from './proposal/key.astro';
import Status from './proposal/status.astro';
// Define the interface for your data
interface TableProps {
  headers: string[];
  rows: { key: string; category: string; title: string; status: string; votingStart: string; votingEnd: string; resultsLink: string }[];
}
---
<div class="rounded-md border w-full overflow-x-auto overflow-y">
  <table class="w-full caption-bottom text-sm">
    <TableHeader />
    <tbody class="[&_tr:last-child]:border-0">
      {rows.map((row) => (
        <tr class="border-b transition-colors hover:bg-muted/50 data-[state=selected]:bg-muted">
          <Key key={row.key}/>
          <Title title={row.title} category={row.category}/>
          <Status status={row.status}/>
          <td>{row.votingStart}</td>
          <td>{row.votingEnd}</td>
          <td><a href={row.resultsLink}>Results</a></td>
        </tr>
      ))}
    </tbody>
  </table>
</div>

