---
import Card, { CardProps } from "../card/card.astro";
import CardContent from "../card/content.astro";
import CardHeader from "../card/header.astro";
import CardTitle from "../card/title.astro";

interface Props extends CardProps{
  total: number;
}

const { className, total } = Astro.props as Props;
---
<Card className={className}>
    <CardHeader className="pb-0.5">
      <CardTitle className="text-sm font-normal">Total Votes</CardTitle>
    </CardHeader>
    <CardContent>
      <div class="votes-number text-xl xl:text-2xl font-bold">{total.toLocaleString('eu-EU')}</div>
      <p class="text-xs text-muted-foreground">Duplicates not included</p>
    </CardContent>
  </Card>