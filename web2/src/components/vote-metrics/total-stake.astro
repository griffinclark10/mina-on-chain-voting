---
import Card, { CardProps } from "../card/card.astro";
import CardHeader from "../card/header.astro";
import CardTitle from "../card/title.astro";
import CardContent from "../card/content.astro";

interface Props extends CardProps{
    total: number;
}

const { total, className }: Props = Astro.props;
---
<Card className={className}>
    <CardHeader className="flex flex-row items-center justify-between space-y-0 pb-0.5">
      <CardTitle className="text-sm font-normal">Total Stake Participated</CardTitle>
    </CardHeader>
    <CardContent>
      <div class="total-stake text-xl xl:text-2xl font-bold">
        {Number.parseFloat(total.toFixed(2)).toLocaleString('en-EU')}
      </div>
      <p class="text-xs text-muted-foreground">Â± 0.005</p>
    </CardContent>
  </Card>